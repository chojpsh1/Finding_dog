<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/first_layout"
    android:orientation="vertical"
    tools:context="com.example.minyoung.finding_dog.FirstActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/first_layout_1"
        android:layout_height="0dp"
        android:layout_weight="3"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="89dp"
            android:src="@drawable/pet1"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageView2"
            android:id="@+id/foot"
            android:src="@drawable/footprint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginEnd="17dp"
            android:src="@drawable/person" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/heart"
            android:text="반려견 등록"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />





    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/first_layout_2"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/first_1"
            android:gravity="center"
            android:text="유기견 찾기"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/chatting_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/first_2"
            android:gravity="center"
            android:text="채팅"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/first_layout_3"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shopping_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/first_3"
            android:gravity="center"
            android:text="상점"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/first_4"
            android:gravity="center"
            android:text="설정"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>
